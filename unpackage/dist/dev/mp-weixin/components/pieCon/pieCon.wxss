/* 请根据实际需求修改父元素尺寸，组件自动识别宽高 */
.charts-box {
  width: 100%;
  height: 250px;
}
.chartsTab {
  display: flex;
  flex-wrap: wrap;
}
.chartsTab .Item {
  display: flex;
  align-items: center;
  flex-basis: 33%;
  margin-bottom: 40rpx;
}
.chartsTab .Item .itemText .time {
  color: #7F7F7F;
  font-size: 24rpx;
  line-height: 40rpx;
}
.chartsTab .Item .point {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  /* background-color: #FFB600; */
  margin-right: 30rpx;
}

